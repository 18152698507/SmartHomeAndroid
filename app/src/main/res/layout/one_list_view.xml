<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="#00000000"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_marginBottom="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="#66FFCC"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/list_tv_room_name"
                android:layout_width="0dp"
                android:textColor="@color/colorPrimary"
                android:text="卧室"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="right|center"
                android:layout_height="60dp"
                android:textSize="25dp" />

            <ImageView
                android:id="@+id/list_iv_room_image"
                android:layout_width="60dp"
                android:layout_weight="0"
                android:layout_height="60dp" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/list_iv_record_w"
                android:layout_width="50dp"
                android:background="@drawable/temp"
                android:layout_weight="0"
                android:layout_height="50dp" />
            <TextView
                android:gravity="center"
                android:id="@+id/list_tv_temp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/list_iv_record_w1"
                android:layout_width="50dp"
                android:background="@drawable/light"
                android:layout_weight="0"
                android:layout_height="50dp" />
            <TextView
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:id="@+id/list_tv_illumination"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="50dp"
                android:textSize="20dp" />
        </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">


                <ImageView
                    android:layout_marginLeft="10dp"
                    android:id="@+id/list_iv_record_w2"
                    android:layout_width="50dp"
                    android:background="@drawable/co"
                    android:layout_weight="0"
                    android:layout_height="50dp" />
                <TextView
                    android:gravity="center"
                    android:id="@+id/list_tv_co"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:textSize="20dp" />

                <ImageView
                    android:id="@+id/list_iv_record_w12"
                    android:layout_width="50dp"
                    android:background="@drawable/shidu"
                    android:layout_weight="0"
                    android:layout_height="50dp" />
                <TextView
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:id="@+id/list_tv_humidity"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="50dp"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>
